// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  password     String
  username     String
  role         Role          @default(USER)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  refreshToken String?
  applications Application[]
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
  FATAL
}

model Application {
  id          String       @id @default(cuid())
  name        String
  description String
  logMessages LogMessage[]
  user        User         @relation(fields: [userId], references: [id])
  userId      String
  countTotalLogMessages Int @default(0)
  countDebugLogMessages Int @default(0)
  infoLogMessages Int @default(0)
  warnLogMessages Int @default(0)
  errorlLogMessages Int @default(0)
  fatalLogMessages Int @default(0)

  @@unique(fields: [id, userId], name: "appUserId")
}

model LogMessage {
  id            String      @id @default(cuid())
  level         LogLevel
  date          DateTime
  message       String
  application   Application @relation(fields: [applicationId], references: [id])
  applicationId String
    @@unique(fields: [id, applicationId], name: "logAppId")
}
